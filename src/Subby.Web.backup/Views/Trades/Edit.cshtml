@using Subby.Web.Models
@model Subby.Core.Entities.Trade
@{
    ViewData["Title"] = "Edit Trade";
    var header = new Header
    {
        Title = "Edit Trade",
        DisplayReturn = true,
        Url = Url.Action("Index", "Trades")
    };
}
<partial name="Partials/_PartialHeader" model="@header"/>
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2 mt-4">
            <p>To edit the trade record, please fill the details below:</p>
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="@Model.Id" value="@Model.Id"/>
                <div class="form-group">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder=""/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group check-toggle-wrap">
                    <div class="row">
                        <div class="col-10">
                            <label for="IsActive">Is Active</label>
                        </div>
                        <div class="col-2">
                            <div class="check-toggle float-right">
                                <label class="switch small" for="IsActive">
                                    <input type="checkbox" id="IsActive" name="Active" asp-for="Active"/>
                                    <div class="slider round"></div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-10 offset-md-1 text-center">
                        <button type="submit" id="apply-job" class="btn btn-primary btn-block mb-3">Submit</button>
                                                <div class="clearfix"></div>
                                                <a asp-controller="Trades" asp-action="Index" class="text-muted">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>