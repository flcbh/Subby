@model             Subby.Web.New.Models.AccountViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_LayoutBasic";
}

    <div class="form-signin">
        <partial name="Partials/_PartialBasicHeader"/>
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <p class="text-dark">If you've forgotten your password, please enter your email address below.</p>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email Address"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default btn-block btn-lg">Submit</button>
            </div>
            <a asp-controller="Account" asp-action="Login" class="text-dark">
                <small>
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M5.854 4.646a.5.5 0 0 1 0 .708L3.207 8l2.647 2.646a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 0 1 .708 0z"/>
                    <path fill-rule="evenodd" d="M2.5 8a.5.5 0 0 1 .5-.5h10.5a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
                </svg> Return to the login page
                </small>
            </a>
        </form>
    </div>
