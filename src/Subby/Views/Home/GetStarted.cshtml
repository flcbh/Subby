@{
    ViewData["Title"] = "Sustainability Yard";
}

<div class="walkthrough show reveal">
    <div class="walkthrough-pagination">
        <a class="dot active"></a>
        <a class="dot"></a>
        <a class="dot"></a>
        <a class="dot"></a>
    </div>
    <div class="walkthrough-body">
        <ul class="screens animate">
            <li class="screen active">
                <div class="media logo">
                    <img class="logo img-fluid" src="/images/icons/welcome.png" alt="Welcome" />
                </div>
                <h3>
                    <strong>
                    Welcome to
                    <br/>Sustainability Yard
                    </strong>
                </h3>
                <p>The app built for subbies to win and share work.</p>
            </li>

            <li class="screen">
                <div class="media bars">
                    <img class="logo img-fluid" src="/images/icons/location.png" alt="Location" />
                </div>
                <h3>
                    Unlimited Job Post and Quotes
                </h3>
                <p>Post a job for the tradesman that you're looking for or find a job for your skillset.</p>
            </li>
            <li class="screen">
                <div class="media books">
                    <img class="logo img-fluid" src="/images/icons/connect-user.png" alt="Connecting" />
                </div>
                <h3>
                    Connecting with
                    <br/>Local tradesmen
                </h3>
                <p>Connecting with local tradesmen has never been easier</p>
            </li>
            <li class="screen">
                <div class="media comm">
                    <img class="logo img-fluid" src="/images/icons/happy.png" alt="Get work done" />
                </div>
                <h3>
                    Share
                    <br/>and Win work
                </h3>
                <p>Get connected with each other and make work easier</p>
            </li>
        </ul>

        <button class="prev-screen">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M5.854 4.646a.5.5 0 0 1 0 .708L3.207 8l2.647 2.646a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 0 1 .708 0z"/>
                <path fill-rule="evenodd" d="M2.5 8a.5.5 0 0 1 .5-.5h10.5a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
            </svg>
        </button>
        <button class="next-screen">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10.146 4.646a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L12.793 8l-2.647-2.646a.5.5 0 0 1 0-.708z"/>
                <path fill-rule="evenodd" d="M2 8a.5.5 0 0 1 .5-.5H13a.5.5 0 0 1 0 1H2.5A.5.5 0 0 1 2 8z"/>
            </svg>
        </button>
    </div>

    <div class="walkthrough-footer">
        <button class="button prev-screen">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M5.854 4.646a.5.5 0 0 1 0 .708L3.207 8l2.647 2.646a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 0 1 .708 0z"/>
                <path fill-rule="evenodd" d="M2.5 8a.5.5 0 0 1 .5-.5h10.5a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
            </svg>
            Previous
        </button>
        <button class="button next-screen">
            Next
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10.146 4.646a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L12.793 8l-2.647-2.646a.5.5 0 0 1 0-.708z"/>
                <path fill-rule="evenodd" d="M2 8a.5.5 0 0 1 .5-.5H13a.5.5 0 0 1 0 1H2.5A.5.5 0 0 1 2 8z"/>
            </svg>
        </button>
        <button class="button finish get-started">Get Started</button>
    </div>
</div>