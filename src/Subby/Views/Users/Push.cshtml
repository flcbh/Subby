@using Subby.Web.New.Models
@model            Subby.Web.New.Models.FIrebaseViewModels.PushViewModel
<div class="modal fade" id="push-modal" tabindex="-1" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body text-center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M11.854 4.146a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708-.708l7-7a.5.5 0 0 1 .708 0z"/>
                            <path fill-rule="evenodd" d="M4.146 4.146a.5.5 0 0 0 0 .708l7 7a.5.5 0 0 0 .708-.708l-7-7a.5.5 0 0 0-.708 0z"/>
                        </svg>
                    </span>
                </button>
                <h5 class="mt-3 mb-3">Push Notification</h5>
                <p class="mb-0">To send a message, please enter the message below:</p>
                <form method="POST" asp-action="Push">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()"/>
                    <input type="hidden" asp-for="@Model.UserId" value="@Model.UserId"/>
                    <div class="form-group text-left">
                        <label asp-for="Message" class="form-label"></label>
                        <textarea asp-for="Message" class="form-control" placeholder="" rows="3"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm" data-save="modal">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>
