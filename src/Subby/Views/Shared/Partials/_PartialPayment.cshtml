<div class="modal fade" id="payment-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body text-center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M11.854 4.146a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708-.708l7-7a.5.5 0 0 1 .708 0z"/>
                            <path fill-rule="evenodd" d="M4.146 4.146a.5.5 0 0 0 0 .708l7 7a.5.5 0 0 0 .708-.708l-7-7a.5.5 0 0 0-.708 0z"/>
                        </svg>
                    </span>
                </button>
                <h5 class="mt-3 mb-3">Premium membership</h5>
                
                <form method="POST" id="payment-form">
                    <input type="hidden" name="token"/>
                    <div class="form-group text-left">
                        <label class="text-left">
                            <span>Please choose one of the payment plans below:</span>
                        </label>
                        <div class="radio-button text-left">
                            <label class="radio-button-label-wrapper" for="payment-monthly">
                                <h3 class="radio-button-label-title">
                                    @await Component.InvokeAsync("PremiumPrice") per month
                                </h3>
                                <input type="radio" name="paymentPlan" id="payment-monthly" value="Monthly" class="radio-button-input" checked="checked">
                                <div class="radio-button-custom-indicator"></div>
                            </label>
                        </div>

                        <div class="radio-button text-left">
                            <label class="radio-button-label-wrapper" for="payment-annually">
                                <h3 class="radio-button-label-title">
                                    @await Component.InvokeAsync("AnnualPrice") annually
                                </h3>
                                <input type="radio" name="paymentPlan" id="payment-annually" value="Annually" class="radio-button-input">
                                <div class="radio-button-custom-indicator"></div>
                            </label>
                        </div>
                    </div>
                    
                    <div class="form-group mt-4">
                        <label class="text-left">
                            <span>Card Number</span>
                            <div id="card-number-element"></div>
                        </label>
                    </div>
                    <div class="form-group">
                        <label class="text-left">
                            <span>Expiry</span>
                            <div id="card-expiry-element"></div>
                        </label>
                    </div>
                    <div class="form-group">
                        <label class="text-left">
                            <span>CVC</span>
                            <div id="card-cvc-element"></div>
                        </label>
                    </div>
                    <div id="card-errors" class="card-errors text-danger mb-2"></div>
                    <button id="pay-button" type="submit" class="btn btn-primary">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-shield-lock-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8 .5c-.662 0-1.77.249-2.813.525a61.11 61.11 0 0 0-2.772.815 1.454 1.454 0 0 0-1.003 1.184c-.573 4.197.756 7.307 2.368 9.365a11.192 11.192 0 0 0 2.417 2.3c.371.256.715.451 1.007.586.27.124.558.225.796.225s.527-.101.796-.225c.292-.135.636-.33 1.007-.586a11.191 11.191 0 0 0 2.418-2.3c1.611-2.058 2.94-5.168 2.367-9.365a1.454 1.454 0 0 0-1.003-1.184 61.09 61.09 0 0 0-2.772-.815C9.77.749 8.663.5 8 .5zm.5 7.415a1.5 1.5 0 1 0-1 0l-.385 1.99a.5.5 0 0 0 .491.595h.788a.5.5 0 0 0 .49-.595L8.5 7.915z"/>
                        </svg> Pay <span id="payment-price">@await Component.InvokeAsync("PremiumPrice")</span>
                    </button>
                    <p class="payment-terms">
                        By clicking Pay, you are agree to Sustainability Yard’s Terms and Conditions
                        <a class="text-muted" href="/policies/terms-of-service">Terms and Conditions.</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>