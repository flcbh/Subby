@model Subby.Web.Models.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Sign up";
    Layout = "_LayoutBasic";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="form-basic">
            <partial name="Partials/_PartialBasicHeader"/>
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <input asp-for="PushToken" class="form-control" type="hidden" value="@ViewData["PushToken"]"/>
                @* <div asp-validation-summary="All" class="validation-errors mb-2 text-warning"></div> *@
                <div class="form-group">
                    <input asp-for="Forename" class="form-control" placeholder="Forename"/>
                    <span asp-validation-for="Forename" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Surname" class="form-control" placeholder="Surname"/>
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email Address"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <p class="text-dark">Your password must contain lowercase, uppercase and must have at least one digit ('0'-'9')</p>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Postcode" class="form-control" placeholder="Postcode"/>
                    <span asp-validation-for="Postcode" class="text-danger"></span>
                </div>
                <div class="form-group check-toggle-wrap">
                    <div class="row">
                        <div class="col-10">
                            <label for="isTrader" class="text-dark">I am a Tradesman?</label>
                        </div>
                        <div class="col-2">
                            <div class="check-toggle transparent float-right">
                                <label class="switch small" for="isTrader">
                                    <input type="checkbox" id="isTrader" name="IsTrader" asp-for="IsTrader"/>
                                    <div class="slider round"></div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-default btn-block btn-lg">Sign up</button>
                </div>
                <div class="form-group">
                    <p class="text-center">
                        <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text-dark">
                            <small>Already have an account?</small>
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>