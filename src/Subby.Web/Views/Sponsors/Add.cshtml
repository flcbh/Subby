@using Subby.Web.Models
@model Subby.Web.Models.AdminViewModels.SponsorViewModel
@{
    ViewData["Title"] = "New Sponsor";
    var header = new Header
    {
        Title = "Add Sponsor",
        DisplayReturn = true,
        Url = Url.Action("Index", "Sponsors")
    };
}
<partial name="Partials/_PartialHeader" model="@header"/>
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2 mt-4">
            <p>To add a new sponsor, please fill the details below:</p>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder=""/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control" placeholder=""/>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Benefits" class="form-label"></label>
                    @Html.DropDownList("Benefits", (IEnumerable<SelectListItem>) ViewData["Benefits"], new {id = "BenefitId", name = "Benefit", @class = "form-control", multiple = "multiple"})
                    <span asp-validation-for="Benefits" class="text-danger"></span>
                </div>
                <div class="form-group check-toggle-wrap">
                    <div class="row">
                        <div class="col-10">
                            <label for="IsActive">Is Active</label>
                        </div>
                        <div class="col-2">
                            <div class="check-toggle float-right">
                                <label class="switch small" for="IsActive">
                                    <input type="checkbox" id="IsActive" name="IsActive" asp-for="IsActive"/>
                                    <div class="slider round"></div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="file">
                        <input type="file" name="File" id="file" class="file-upload-field" aria-label="File browser example">
                        <span class="file-custom">Logo</span>
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Website" class="form-label"></label>
                    <input asp-for="Website" type="url" pattern="https?://.+" class="form-control" placeholder="https://www."/>
                    <span asp-validation-for="Website" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-10 offset-md-1 text-center">
                        <button type="submit" id="apply-job" class="btn btn-primary btn-block mb-3">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>