
<!-- Modal -->
<div class="modal fade" id="premium-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body p-0">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M11.854 4.146a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708-.708l7-7a.5.5 0 0 1 .708 0z"/>
                            <path fill-rule="evenodd" d="M4.146 4.146a.5.5 0 0 0 0 .708l7 7a.5.5 0 0 0 .708-.708l-7-7a.5.5 0 0 0-.708 0z"/>
                        </svg>
                    </span>
                </button>
                
                <div class="box blue mb-0 mt-3">
                    <p>Please upgrade to premium to quote for unlimited jobs and access the member benefits</p>
                    <h2 class="price-text">@await Component.InvokeAsync("PremiumPrice")</h2>
                    <h6>Premium member benefits includes</h6>
                    <ul>
                        <li>Insurance</li>
                        <li>Fleet deals</li>
                        <li>Workwear & Construction and many more...</li>
                    </ul>
                    <a asp-controller="Policies" asp-action="Premium" class="btn btn-green btn-block mb-3" data-toggle="modal" data-target="#payment-modal">Upgrade now!</a>
                </div>
            </div>
        </div>
    </div>
</div>