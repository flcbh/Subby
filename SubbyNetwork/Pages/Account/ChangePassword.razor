@page "/ChangePassword"
@using SubbyNetwork.Models.AccountViewModels
@inject NavigationManager Navigation;

<h3>Change Password</h3>

<div class="alert alert-info">
    Change Password.
</div>

<EditForm Model="@cp" OnValidSubmit="@ValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label>Email</label>
        <InputText id="Email" @bind-Value="cp.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Current Password</label>
        <InputText id="CurrentPassword" type="password" @bind-Value="cp.CurrentPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <InputText id="password" type="password" @bind-Value="cp.Password" class="form-control" />
    </div>
    <div class="form-group">
        <label>ConfirmPassword</label>
        <InputText id="ConfirmPassword" type="password" @bind-Value="cp.ConfirmPassword" class="form-control" />
    </div>
    <div class="form-group mt-1">
        <button type="submit" class="btn btn-primary w-100">Save Now</button>
    </div>
</EditForm>

@code {
    private ChangePasswordViewModel cp = new ChangePasswordViewModel();

    private void ValidSubmit()
    {
        var successful =  cp.Save(cp);

        if (!successful)
            return;

        Navigation.NavigateTo("/login"); 
    }
}
